pipeline {
    agent any

    tools {
        jdk 'JDK-21'
        maven 'Maven 3.9.9'
    }

    stages {
        stage('Checkout Dev Branch') {
            steps {
                echo 'Checking out Dev branch...'
                git branch: 'Dev', url: 'https://github.com/Ntangsi/brightmind-tech.git'
            }
        }

        stage('Build WAR') {
            steps {
                echo 'Building WAR file...'
                bat 'mvn clean package'
            }
        }

        stage('Archive Artifact') {
            steps {
                echo 'Archiving WAR file...'
                archiveArtifacts artifacts: 'target/brightmind-tech.war'
            }
        }
    }

    post {
        success {
            echo 'Build complete and WAR file archived.'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
